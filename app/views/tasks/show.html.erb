
<h1>My task</h1>
<ul>
<li>  <input type="checkbox" id="completed" name="completed"
        <%= @task[:completed] ? "checked" : "" %>>
      <%= @task[:title] %> <%= @task[:details] %></li>
</ul>
<%= link_to "edit", edit_path(@task) %>
<br>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
<br>
<%= link_to "back to list", tasks_path %>
